{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "mid": {
      "type": "string",
      "description": "Message ID - can be UUID or custom format",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": ["text", "presence", "system", "ack", "alert", "notification"],
      "description": "Message type for routing and handling"
    },
    "content": {
      "type": "string"
    },
    "sender": {
      "type": "string"
    },
    "destination": {
      "type": ["string", "array"],
      "items": { "type": "string" }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "format": { "type": "string" },
    "encoding": { "type": "string" },
    "refs": {
      "type": "array",
      "description": "Referenced message IDs for threading/replies",
      "items": { "type": "string" }
    },
    "ttl": { "type": "integer" },
    "hops": { "type": "integer" },
    "sig": { "type": "string" },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "reply_info": {
      "type": "object",
      "properties": {
        "message_id": { "type": "string" },
        "user_id": { "type": "string" },
        "timestamp": { "type": "integer" }
      },
      "required": ["message_id", "user_id", "timestamp"]
    },
    "media": {
      "type": "object",
      "properties": {
        "media_type": { "type": "string" },
        "url": { "type": "string" },
        "thumbnail_url": { "type": "string" },
        "width": { "type": "integer" },
        "height": { "type": "integer" },
        "duration": { "type": "integer" }
      },
      "required": ["media_type", "url"]
    },
    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "entity_type": { "type": "string" },
          "offset": { "type": "integer" },
          "length": { "type": "integer" },
          "url": { "type": "string" },
          "user": {
            "type": "object",
            "properties": {
              "user_id": { "type": "string" },
              "username": { "type": "string" },
              "first_name": { "type": "string" },
              "last_name": { "type": "string" }
            },
            "required": ["user_id"]
          }
        },
        "required": ["entity_type", "offset", "length"]
      }
    },
    "reactions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "reaction": { "type": "string" },
          "count": { "type": "integer" },
          "users": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["reaction", "count", "users"]
      }
    }
  },
  "required": ["mid", "type", "content", "sender", "destination", "timestamp"]
}
